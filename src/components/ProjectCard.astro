---
const { title, description, tech, link } = Astro.props;
---

<a 
  href={link}
  target="_blank"
  class="block bg-gray-900/60 backdrop-blur-md p-6 rounded-2xl border border-gray-800 hover:border-blue-500 transition duration-300 hover:scale-105"
>
  <h3 class="text-xl font-semibold mb-3">{title}</h3>

  <p class="text-gray-400 mb-4 leading-relaxed">
    {description}
  </p>

  <span class="text-sm bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full">
    {tech}
  </span>
</a>
